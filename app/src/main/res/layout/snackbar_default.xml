<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/button_click_parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_failed"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/lottie_failed"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"/>

        <TextView
            android:id="@+id/toast_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:layout_toEndOf="@id/lottie_failed"
            android:layout_alignParentEnd="true"
            android:maxLines="2"
            tools:text="@tools:sample/lorem[3]"
            android:textAppearance="@style/AppTheme.TextAppearance.Body.L.SemiBold"/>

    </RelativeLayout>


</RelativeLayout>
