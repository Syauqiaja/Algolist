<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.add.AddTaskFragment"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Add New Task"
        app:titleTextAppearance="@style/AppTheme.TextAppearance.Body.L.SemiBold"
        android:layout_marginBottom="@dimen/_16sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/field_marked"
        android:layout_marginHorizontal="@dimen/_19sdp"
        android:textAppearance="@style/AppTheme.TextAppearance.Body.S"
        android:layout_marginBottom="@dimen/_16sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textAppearance="@style/AppTheme.TextAppearance.Body.L.Medium"
        android:layout_marginHorizontal="@dimen/_19sdp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
        app:boxCornerRadiusBottomStart="@dimen/_8sdp"
        app:boxCornerRadiusTopEnd="@dimen/_8sdp"
        app:boxCornerRadiusTopStart="@dimen/_8sdp"
        app:hintEnabled="false"
        android:layout_marginTop="@dimen/_4sdp"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
        android:layout_marginHorizontal="@dimen/_19sdp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:imeOptions="actionNext"
            android:inputType="textShortMessage"
            android:backgroundTint="?attr/colorSurface"
            android:outlineProvider="none"
            android:paddingVertical="@dimen/_12sdp"
            android:hint="Title Task"
            style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textAppearance="@style/AppTheme.TextAppearance.Body.L.Medium"
        android:layout_marginHorizontal="@dimen/_19sdp"
        android:layout_marginTop="@dimen/_12sdp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
        app:boxCornerRadiusBottomStart="@dimen/_8sdp"
        app:boxCornerRadiusTopEnd="@dimen/_8sdp"
        app:boxCornerRadiusTopStart="@dimen/_8sdp"
        app:hintEnabled="false"
        android:layout_marginTop="@dimen/_4sdp"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
        android:layout_marginHorizontal="@dimen/_19sdp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:backgroundTint="?attr/colorSurface"
            android:lines="3"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:outlineProvider="none"
            android:paddingVertical="@dimen/_12sdp"
            android:hint="Description Task"
            style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textAppearance="@style/AppTheme.TextAppearance.Body.L.Medium"
        android:layout_marginHorizontal="@dimen/_19sdp"
        android:layout_marginTop="@dimen/_12sdp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
        app:boxCornerRadiusBottomStart="@dimen/_8sdp"
        app:boxCornerRadiusTopEnd="@dimen/_8sdp"
        app:boxCornerRadiusTopStart="@dimen/_8sdp"
        app:hintEnabled="false"
        android:layout_marginTop="@dimen/_4sdp"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
        android:layout_marginHorizontal="@dimen/_19sdp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:imeOptions="actionNext"
            android:inputType="textShortMessage"
            android:backgroundTint="?attr/colorSurface"
            android:outlineProvider="none"
            android:focusable="false"
            android:clickable="true"
            android:paddingVertical="@dimen/_12sdp"
            android:drawableStart="@drawable/ic_date"
            android:drawableTint="?attr/hintTextColor"
            android:hint="Select Date"
            android:drawablePadding="@dimen/_4sdp"
            style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_19sdp"
        android:layout_marginTop="@dimen/_16sdp">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:includeFontPadding="false"
            android:drawablePadding="@dimen/_4sdp"
            android:textAppearance="@style/AppTheme.TextAppearance.Body.L.Medium"
            app:drawableStartCompat="@drawable/ic_clock" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_time"
            android:textOn=""
            android:textOff=""
            android:switchMinWidth="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:checked="false"
            app:track="@drawable/switch_custom_track"
            android:background="@color/transparent"
            android:thumb="@drawable/switch_custom_thumb"/>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_19sdp"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_19sdp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Cancel"
            android:textColor="?attr/colorPrimary"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="?attr/colorPrimary"/>
        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="0dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Save"
            app:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            app:strokeColor="?attr/colorPrimary"/>
    </LinearLayout>
</LinearLayout>