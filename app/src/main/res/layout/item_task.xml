<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_3sdp"
    android:clickable="true"
    android:focusable="false"
    android:background="@drawable/ripple_default_square">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_taskView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/card_task"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="?attr/colorOnPrimary"
            app:layoutDescription="@xml/item_task_xml_constraintlayout2_scene">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lot_checkbox"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                app:lottie_rawRes="@raw/lottie_checkbox"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                android:layout_marginStart="@dimen/_minus25sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:checked="false"
                android:minWidth="0dp"
                android:padding="0dp"
                android:theme="@style/AppTheme.Checkbox"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_task_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textAppearance="@style/AppTheme.TextAppearance.Body.M.Medium"
                app:layout_constraintBottom_toTopOf="@id/tv_task_time"
                app:layout_constraintEnd_toStartOf="@id/btn_delete"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/checkbox"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="@tools:sample/lorem[7]" />

            <TextView
                android:id="@+id/tv_task_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:includeFontPadding="false"
                android:textAppearance="@style/AppTheme.TextAppearance.Body.M"
                android:textColor="?attr/colorPrimary"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_delete"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/checkbox"
                app:layout_constraintTop_toBottomOf="@id/tv_task_title"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="@tools:sample/lorem[1]" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="0dp"
                android:layout_marginVertical="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:visibility="visible"
                app:backgroundTint="@color/state_negative_60"
                app:cornerRadius="0dp"
                app:icon="@drawable/ic_trash"
                app:iconGravity="textTop"
                app:iconSize="@dimen/_18sdp"
                app:iconTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.motion.widget.MotionLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>